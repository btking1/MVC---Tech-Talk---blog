<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>

  <form class="edit-post-form">

    <h2 class="form-label">
      Edit Post
    </h2>


    <input class="form-input" name="post-title" type="text" placeholder="title">


    <textarea name="post-body" class="form-input" type="text" placeholder="description"></textarea>

    <button class="btn" type="submit">Save</button>

    <button type="button" class="btn" id="delete-btn">Delete</button>
  </form>
</article>

<form class="new-comment-form">
  <textarea class="form-input"type="text" name="comment-body"></textarea>
  <button class="btn">Add Comment</button>
</form>


<script src="/js/edit.js"></script>

<script src="/js/comment.js"></script>






























